<%- include('_layouts/header') %>

<div class="row">
  <h1 class="page-header srf"> <%= p.title %> </h1>
  <div class="col-xs-12 col-md-5">
    <img class="spi" src="/product_images/<%= p.image %>" alt="">
    <br>
    </div>
  <div class="col-xs-12 col-md-7">
    <p><strong>Description:</strong><%= p.desc %></p>
    <p>Rs.<%= parseFloat(p.price).toFixed(2) %></p>
    <% if(loggedIn){ %>
        <p><a href="/cart/add/<%= p.slug %>">Add to cart</a></p>
    <% } else { %>
      <p>You must be logged in to purchase items</p>
    <% } %>
  </div>

</div>

<%- include('_layouts/footer') %>
