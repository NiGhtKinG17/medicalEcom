<%- include('../_layouts/adminheader') %>

<h2 class="page-title srf">Edit a page</h2>
<a href="/admin/pages" class="btn adminbuttons">Back to all pages</a>
<br><br>

<form class="row g-3" action="/admin/pages/edit_page/<%=id%>" method="post">
  <div class="form-group">
    <label class="form-label" for="">Title</label>
    <input class="form-control" type="text" name="title" value="<%= title %>" placeholder="Title">
  </div>
  <div class="form-group">
    <label class="form-label" for="">Slug</label>
    <input class="form-control" type="text" name="slug" value="<%= slug %>" placeholder="Slug">
  </div>
  <div class="form-group">
    <label class="form-label" for="">Content</label>
    <textarea class="form-control" name="content" id="ta" rows="10" cols="30" placeholder="Content"><%= content %></textarea>
  </div>
  <div class="col-12">
    <button class="btn adminbuttons" type="submit">Submit</button>
  </div>
</form>

<%- include('../_layouts/adminfooter') %>
