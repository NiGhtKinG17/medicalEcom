<%- include('_layouts/header') %>

<div class="row row-cols-1 row-cols-md-3 mb-3 text-center products">
  <% products.forEach((p) => { %>
    <div class="col">
      <div class="card mb-4 rounded-3 shadow-sm">
        <a class="pa" href="/products/<%= p.category %>/<%=p.slug%>">
          <img class="pimage" src="/product_images/<%= p.image %>" alt="">
        </a>
        <div class="card-body">
          <h4 class="card-title"><%= p.title %></h4>
          <h5>Rs.<%= parseFloat(p.price).toFixed(2) %></h5>
          <a class="vd" href="/products/<%= p.category %>/<%= p.slug %>">View Details</a><br>
          <% if(loggedIn){ %>
              <p><a href="/cart/add/<%= p.slug %>">Add to cart</a></p>
          <% } %>
        </div>

      </div>

    </div>
  <% }) %>
</div>

<%- include('_layouts/footer') %>
