<%- include('_layouts/header') %>

<div class="row row-cols-1 row-cols-md-5 mb-3 text-center products">
  <% products.forEach((p) => { %>
    <div class="col">
      <div class="card mb-4 rounded-3 cardshad">
        <a class="pa" href="/products/<%= p.category %>/<%=p.slug%>">
          <img class="pimage" src="/product_images/<%= p.image %>" alt="">
        </a>
        <div class="card-body">
          <h5 class="card-title"><%= p.title %></h5>
          <% if(!loggedIn){ %>
            <div class="vdatcli">
              <h5 class="itp"><b>Rs.<%= parseFloat(p.price).toFixed(2) %></b></h5>
              <a class="btn btn-atc" href="/users/login">ðŸ›’ Add to Cart</a><br>

            </div>
          <% } %>
          <% if(loggedIn){ %>
          <div class="vdatcli">
                <h5 class="itp"><b>Rs.<%= parseFloat(p.price).toFixed(2) %></b></h5>
                <a class="btn btn-atc" href="/cart/add/<%= p.slug %>">ðŸ›’ Add to Cart</a>

          </div>
          <% } %>
        </div>

      </div>

    </div>
  <% }) %>
</div>

<%- include('_layouts/footer') %>
